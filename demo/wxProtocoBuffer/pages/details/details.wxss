page{
  background-color: #F5F5F5;
}
image{
  height: auto;
}
.backWhite{
  background-color:#fff;
}
.detailsCenter{
  display: flex;
  justify-content: center;
  align-items: center;
}
.detailsCenter image{
  width: 128rpx;
  border-radius: 50%;
  margin: 24rpx 30rpx;
  height: 128rpx;
}
.detailsIntroduction{
  width: 100%;
  font-size: 24rpx;
  color: #9B9B9B;
}
.detailsIntroduction .name{
  margin-top: 30rpx;
}
.detailsIntroduction .name>text:first-child{
  font-size: 36rpx;
  color: #4A4A4A;
  margin-right: 20rpx;
  font-weight: bold;
}
.detailsIntroduction .name>text:nth-last-child(1){
  color: #fff;
  background-color: #39BEEC;
  font-size: 24rpx;
  height: 32rpx;
  width: 88rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}
.detailsIntroduction .title{
  margin: 4rpx 0rpx;
}
.detailsIntroduction .address{
  margin-bottom: 4rpx;
  display: flex;
  justify-content: end;
  align-items: center;
}
.address text{
  font-size: 16px;
  color: #D43E72;
  border: 1px solid #D43E72;
  margin-left: -3px;
  padding: 0rpx 4px;
  border-radius: 2px;
  transform: scale(0.5, 0.5);
  line-height: 38rpx;
}
/*个人简介*/
.description{
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9B9B9B;
  overflow: hidden;
  /* display: flex;
  justify-content: center;
  align-items: center; */
}
.description .label{
  float: left;
  margin-left: 30rpx;
  margin-right: 46rpx;
}
.description .p{
  float: left;
  width: 73%;
  padding-right: 7rpx;
}
/*查看更多*/
.simple{
  text-align: center;
}
.simple image{
  width: 24rpx;
  
  margin: 16rpx 0rpx;
}
/**/
.assistant{
  margin-top: 20rpx;
}
.assistant .title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F5;
}
.assistant .title image{
  width: 32rpx;
}
.assistant .title text{
  color: #4A4A4A;
  font-size: 32rpx;
}
/*助手详情*/
.assistantText{
  display:flex;
  justify-content:center;
  align-items:center;
}
.assistantWidth{
  width: 100%;
  font-size: 24rpx;
  color: #9B9B9B;
}
.assistantText image{
  width: 96rpx;
  border-radius: 50%;
  margin: 24rpx 30rpx;
  height: 96rpx;
}
.assistantText .name{
  margin-bottom: 4rpx;
  margin-top: 36rpx;
}
.assistantText .name text{
  font-size: 28rpx;
  color: #4A4A4A;
  margin-right: 10rpx;
}
.assistantText .label{
  margin-bottom: 4rpx;
  display: flex;
  justify-content: end;
  align-items: center;
}
.assistantText .label text{

  font-size: 16px;
  color: #D43E72;
  border: 1px solid #D43E72;
  margin-left: -3px;
  padding: 0rpx 4px;
  border-radius: 2px;
  transform: scale(0.5, 0.5);
  line-height: 38rpx;
}
.assistantText .type{
  margin-bottom: 32rpx;
}
.more{
  font-size: 24rpx;
  color: #9B9B9B;
  text-align: center;
  padding: 28rpx 0rpx;
  border-top:1rpx solid #F5F5F5;
  margin-bottom: 124rpx;
}
/*沟通*/
.chat{
  background-color: #BE3468;
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  bottom: 0rpx;
}
.chat image{
  width: 32rpx;
}
.chat text{
  font-size: 32rpx;
  color: #fff;
  margin-left: 20rpx;
}